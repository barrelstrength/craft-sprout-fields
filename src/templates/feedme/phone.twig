{% import 'feed-me/_macros' as feedMeMacro %}
{% import '_includes/forms' as forms %}

{# Special case when inside another complex field (Matrix) #}
{% if parentPath is defined %}
    {% set prefixPath = parentPath %}
{% else %}
    {% set prefixPath = [handle] %}
{% endif %}

{% set classes = ['complex-field'] %}

<tr class="complex-field complex-field-header">
    <td class="col-field" colspan="3">
        <div class="field">
            <div class="heading">
                <label class="">{{ name }}</label>
            </div>

            <div class="additional-mapping-fields">
                {% namespace 'fieldMapping[' ~ prefixPath | join('][') ~ ']' %}
                    <input type="text" name="field" value="{{ className(field) }}">
                {% endnamespace %}
            </div>
        </div>
    </td>
</tr>

{% set nameLabel = "Country" %}

{% set path = prefixPath %}
{% set default = default ?? {
    type: 'text',
} %}
{% embed 'feed-me/_includes/fields/_base' %}
    {% block additionalFieldSettings %}
        {% namespace 'fieldMapping[' ~ path | join('][') ~ ']' %}
            <input type="text" name="handle" value="country">
        {% endnamespace %}
    {% endblock %}

    {% block fieldSettings %}

    {% endblock %}
    {% block defaultSettings %}
        <input type="text" name="default[country]" placeholder="US" value="{{ defaultValue.country ?? null }}">
    {% endblock %}
{% endembed %}

{% set nameLabel = "Phone" %}
{% set path = prefixPath %}
{% set default = NULL %}
{% embed 'feed-me/_includes/fields/_base' %}
    {% block additionalFieldSettings %}
        {% namespace 'fieldMapping[' ~ path | join('][') ~ ']' %}
            <input type="text" name="handle" value="phone">
        {% endnamespace %}
    {% endblock %}

    {% block fieldSettings %}

    {% endblock %}

    {% block defaultSettings %}
        <input type="text" name="default[phone]" placeholder="754-3010"
               value="{{ defaultValue.phone ?? null }}">
    {% endblock %}
{% endembed %}

