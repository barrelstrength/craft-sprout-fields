{% import 'feed-me/_macros' as feedMeMacro %}
{% import '_includes/forms' as forms %}

{# Special case when inside another complex field (Matrix) #}
{% if parentPath is defined %}
    {% set prefixPath = parentPath %}
{% else %}
    {% set prefixPath = [handle] %}
{% endif %}

{% set classes = ['complex-field'] %}

<tr class="complex-field complex-field-header">
    <td class="col-field" colspan="3">
        <div class="field">
            <div class="heading">
                <label class="">{{ name }}</label>
            </div>

            <div class="additional-mapping-fields">
                {% namespace 'fieldMapping[' ~ prefixPath | join('][') ~ ']' %}
                    <input type="text" name="field" value="{{ className(field) }}">
                {% endnamespace %}
            </div>
        </div>
    </td>
</tr>


{% set path = prefixPath %}
{% set nameFields = {
    'enableMetaDetailsSearch': 'Enable Meta Details Search',
    'enableMetaDetailsOpenGraph': 'Enable Meta Details Open Graph',
    'enableMetaDetailsTwitterCard': 'Enable Meta Details Twitter Card',
    'enableMetaDetailsGeo': 'Enable Meta Details Geo',
    'enableMetaDetailsRobots': 'Enable Meta Details Robots',
    'canonical': 'Canonical',
    'title': 'Title',
    'description': 'Description',
    'keywords': 'Keywords',
    'ogType': 'Og Type',
    'ogTitle': 'Og Title',
    'ogDescription': 'Og Description',
    'ogImage': 'Og Image',
    'twitterCard': 'Twitter Card',
    'twitterTitle': 'Twitter Title',
    'twitterDescription': 'Twitter Description',
    'twitterImage': 'Twitter Image',
    'twitterCreator': 'Twitter Creator',
    'region': 'Region',
    'placename': 'Placename',
    'latitude': 'Latitude',
    'longitude': 'Longitude',
    'robots/noindex': 'Robots noindex',
    'robots/nofollow': 'Robots nofollow',
    'robots/noarchive': 'Robots noarchive',
    'robots/noimageindex': 'Robots noimageindex',
    'robots/noodp': 'Robots Code noodp',
    'robots/noydir': 'Robots Code noydir'
} %}

{% for index, label in nameFields %}
    {% set nameLabel = label %}

    {% embed 'feed-me/_includes/fields/_base' %}
        {% block additionalFieldSettings %}
            {% namespace 'fieldMapping[' ~ path | join('][') ~ ']' %}
                <input type="text" name="handle" value="{{ index }}">
            {% endnamespace %}
        {% endblock %}

        {% block fieldSettings %}

        {% endblock %}
    {% endembed %}
{% endfor %}

